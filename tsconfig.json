{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true, // Enable the generation of .d.ts files
    "declarationDir": "dist", // Specify the directory for type definition files
    "outDir": "dist", // Specify the output directory for compiled JS files
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"], // Include all files in src folder
  "exclude": ["node_modules"] // Exclude node_modules
}
