{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true, // Enable the generation of .d.ts files
    "declarationDir": "dist/types", // Change this to your preferred output folder
    "outDir": "dist", // Output for .js files
    "rootDir": "src", // Root directory of your source files
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"], // Include all files in src folder
  "exclude": ["node_modules"] // Exclude node_modules
}
