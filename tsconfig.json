{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true, // This tells TypeScript to generate declaration files
    "declarationDir": "dist/types", // This is where the .d.ts files will go
    "outDir": "dist", // This is where the .js files will go
    "rootDir": "src" // Ensure the source files are in the 'src' folder
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
